@*@using Microsoft.AspNetCore.Identity
    @using Application.IO.Site.Models*@

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Home" asp-action="About">Sobre</a></li>

        @if (SignInManager.IsSignedIn(User))
        {
            <li><a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Olá @((await UserManager.FindByEmailAsync(User.Identity.Name)).Name.Split(' ')[0])</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        }
        else
        {
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrar</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Entrar</a></li>
        }
    </ul>
</form>