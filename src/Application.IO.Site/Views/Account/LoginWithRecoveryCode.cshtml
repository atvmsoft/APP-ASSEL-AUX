@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recuperar código de verificação";
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    Você pediu para logar com código de recuperação.
    Este login não será reconhecido até você fornecer a autenticação via código ou desabilitar a autenticação dupla.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}