@model SystemModels.AreaAtuacao.AreaAtuacaoModel

<style>
    .modal-dialog {
        width: 600px !important;
    }
</style>

<script>
    $("#FormEdtAreaAtuacao").submit(function () {
        $.ajax({
            type: this.method,
            url: this.action,
            data: $(this).serialize(),
            success: function (result) {
                if (result.valido != undefined && !result.valido)
                    DefaultError(result.mensagens, 400);
                else {
                    DefaultSucess();
                    $("#ModalMain").modal("hide");
                    new MvcGrid(document.querySelector('#GridAreaAtuacao')).reload();
                }
            },
            error: function () {
                DefaultErrorAlert();
            }
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Excluir - Área de Atuação</h4>
</div>

@using (Html.BeginForm("SaveAreaAtuacao", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", id = "FormEdtAreaAtuacao", role = "form", onsubmit = "return false;" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.Hidden("LogicalDelete", true);
    @Html.HiddenFor(m => m.Nome)

    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.LabelFor(m => m.Nome)
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.DisplayFor(m => m.Nome)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></button>
        <button type="button" class="btn btn-danger btn-left-zero" data-dismiss="modal"><i class="glyphicon glyphicon-ban-circle"></i></button>
    </div>
}