<link rel="stylesheet" href="~/css/Views/Dashboard/dashboard.css">

<script src="~/js/Views/Dashboard/dashboard.js"></script>

<h2>Big Data</h2>

<ul class="nav nav-tabs" id="advCadTab" role="tablist">
    <li class="nav-item active">
        <a class="nav-link" id="tab-adv" data-toggle="tab" href="#tab-c-advogado" role="tab" aria-selected="true">Advogados</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="tab-att" data-toggle="tab" href="#tab-c-atuacao" role="tab" aria-selected="false">Área de Atuação</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="tab-sit" data-toggle="tab" href="#tab-c-situacao" role="tab" aria-selected="false">Situação</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="tab-t-cont" data-toggle="tab" href="#tab-c-contato" role="tab" aria-selected="false">Tipo de Contato</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="tab-t-end" data-toggle="tab" href="#tab-c-endereco" role="tab" aria-selected="false">Tipo de Endereço</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="tab-t-report" data-toggle="tab" href="#tab-c-report" role="tab" aria-selected="false">Relatório</a>
    </li>
</ul>
<div class="tab-content" id="advCadTabContent">
    <div class="tab-principal tab-pane active in" id="tab-c-advogado" role="tabpanel">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:10px;">
                <a class="btn btn-primary" asp-controller="Dashboard" asp-action="Lawyer"><i class="glyphicon glyphicon-plus"></i></a>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="GridAdvogado" class="mvc-grid"></div>
                <script>
                    var grid = document.querySelector('#GridAdvogado.mvc-grid');

                    // Triggered after grid stop loading
                    grid.addEventListener('reloadend', function (e) {
                        alert("paz");
                    });
                </script>
            </div>
        </div>
    </div>
    <div class="tab-principal tab-pane" id="tab-c-atuacao" role="tabpanel" style="overflow-y:auto; overflow-x:hidden;">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:10px;">
                <button class="btn btn-primary" onclick="GridAreaAtuacaoEdt(0);" data-toggle="modal" data-target="#ModalMain"><i class="glyphicon glyphicon-plus"></i></button>
                <button class="btn btn-warning" onclick="javascript:new MvcGrid(document.querySelector('#GridAreaAtuacao')).reload();"><i class="glyphicon glyphicon-refresh"></i></button>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="GridAreaAtuacao" class="mvc-grid"></div>
            </div>
        </div>
    </div>
    <div class="tab-principal tab-pane" id="tab-c-situacao" role="tabpanel">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:10px;">
                <button class="btn btn-primary" onclick="GridSituacaoEdt(0);" data-toggle="modal" data-target="#ModalMain"><i class="glyphicon glyphicon-plus"></i></button>
                <button class="btn btn-warning" onclick="javascript:new MvcGrid(document.querySelector('#GridSituacao')).reload();"><i class="glyphicon glyphicon-refresh"></i></button>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="GridSituacao" class="mvc-grid"></div>
            </div>
        </div>
    </div>
    <div class="tab-principal tab-pane" id="tab-c-contato" role="tabpanel">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:10px;">
                <button class="btn btn-primary" onclick="GridTipoContatoEdt(0);" data-toggle="modal" data-target="#ModalMain"><i class="glyphicon glyphicon-plus"></i></button>
                <button class="btn btn-warning" onclick="javascript:new MvcGrid(document.querySelector('#GridTipoContato')).reload();"><i class="glyphicon glyphicon-refresh"></i></button>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="GridTipoContato" class="mvc-grid"></div>
            </div>
        </div>
    </div>
    <div class="tab-principal tab-pane" id="tab-c-endereco" role="tabpanel">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:10px;">
                <button class="btn btn-primary" onclick="GridTipoEnderecoEdt(0);" data-toggle="modal" data-target="#ModalMain"><i class="glyphicon glyphicon-plus"></i></button>
                <button class="btn btn-warning" onclick="javascript:new MvcGrid(document.querySelector('#GridTipoEndereco')).reload();"><i class="glyphicon glyphicon-refresh"></i></button>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="GridTipoEndereco" class="mvc-grid"></div>
            </div>
        </div>
    </div>

    <div class="tab-principal tab-pane" id="tab-c-report" role="tabpanel">
        @Html.Partial("Advogado/Reports/_QtdUserWork")
    </div>
</div>

<script src="~/js/Views/Advogado/dashboardGridAdvogado.js"></script>
<script src="~/js/Views/AreaAtuacao/dashboardGridAreaAtuacao.js"></script>
<script src="~/js/Views/Situacao/dashboardGridSituacao.js"></script>
<script src="~/js/Views/TipoContato/dashboardGridTipoContato.js"></script>
<script src="~/js/Views/TipoEndereco/dashboardGridTipoEndereco.js"></script>