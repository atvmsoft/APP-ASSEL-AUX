@model SystemModels.Advogado.AdvogadoContatoModel

<style>
    .modal-dialog {
        max-width: 500px !important;
    }
</style>

<script src="~/js/Views/Dashboard/Advogado/Contato/Index.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    @if (Model.Id == 0)
    {
        <h4 class="modal-title">Inserir Contato</h4>
    }
    else
    {
        <h4 class="modal-title">Editar - Contato</h4>
    }
</div>
<div>
    @using (Html.BeginForm("SaveAdvContato", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", id = "FormEdtAdvContato", role = "form", onsubmit = "return false;" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.IdAdvogado)

        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.LabelFor(m => m.IdTipoContato)
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.DropDownListFor(m => m.IdTipoContato, new SelectList(ViewBag.TipoContato, "Id", "Nome"), new { autocomplete = "nope", @class = "form-control", @required = "" })
                </div>
            </div>
            <div class="row padding-adjust-last">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.LabelFor(m => m.Contato)
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.TextBoxFor(m => m.Contato, new { autocomplete = "nope", @class = "form-control phone-number", @required = "", @maxlength = "10" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></button>
            <button type="button" class="btn btn-danger btn-left-zero" data-dismiss="modal"><i class="glyphicon glyphicon-ban-circle"></i></button>
        </div>
    }
</div>