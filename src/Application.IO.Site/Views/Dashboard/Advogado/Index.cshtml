@model SystemModels.Advogado.AdvogadoModel

<link rel="stylesheet" href="~/css/Views/Dashboard/Advogado/Index.css" />

@if (Model.Id == 0)
{
    <h2>Cadastro de Advogado</h2>
}
else
{
    <h2>Editar Advogado: @($"{Model.Nome} - {Model.NumOrdem}")</h2>
}

@using (Html.BeginForm("SaveTipoEndereco", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", id = "FormEdtTipoEndereco", role = "form", onsubmit = "return false;" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 zero-padding">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.LabelFor(m => m.Nome)
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.TextBoxFor(m => m.Nome, new { autocomplete = "nope", @class = "form-control", @required = "", @autofocus = "" })
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 zero-padding">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.LabelFor(m => m.NumOrdem)
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.TextBoxFor(m => m.NumOrdem, new { autocomplete = "nope", @class = "form-control", @required = "" })
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 zero-padding">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.LabelFor(m => m.DateInscricaoOAB)
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.TextBoxFor(m => m.DateInscricaoOAB, new { autocomplete = "nope", @class = "form-control", @required = "" })
            </div>
        </div>
    </div>
    <div class="row div-submit">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></button>
            <a class="btn btn-danger btn-left-zero" asp-controller="Dashboard" asp-action="Index"><i class="glyphicon glyphicon-ban-circle"></i></a>
        </div>
    </div>
}